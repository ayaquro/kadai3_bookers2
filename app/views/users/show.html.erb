<%= render 'books/list', user: @user, book: @book %>


<h2>Books</h2>
<table class="table table-striped">
<% @books.each do |book| %>
<p><%= image_tag book.user.get_profile_image(100,100) %></p>
<thead>
<tr>
<th>Title</th>
<th>Opinion</th>
</tr>
</thead>
<tbody>
<tr>
<td><%=link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>
</tr>
</tbody>
</table>
<% end %>
