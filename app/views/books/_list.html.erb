<h2>User info</h2>
<% if user.profile_image.attached? %>
<p><%= image_tag user.get_profile_image(100,100) %></p>
<% else %>
    <%= image_tag 'no_image', size: "100x100" %>
<% end %>
<tr><th>name<%= user.name %></th></tr>
<tr><th>introduction<%= user.introduction %></th></tr>

<% if @user == current_user %>
<%= link_to "イラスト", edit_user_path(params[:id]) %>
<% else %>
<%= link_to "イラスト", user_path(current_user) %>
<% end %>

<h2>New Book</h2>
<%= form_with model: book do |f| %>
  <label>Title</label><br>
  <%= f.text_field :title %><br>

  <label>Opinion</label><br>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>