<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'list', user: @user,book: @booknew %>
  </div>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
<table class="table">
  <tbody>
      <tr>
<td><%= image_tag @user.get_profile_image(100,100) %><br>
    <%= link_to @user.name,user_path(@user) %></td>
<!--本のタイトル-->
<td><%= link_to @book.title,book_path(@book) %></td>
<!--オピニオン-->
<td><%= @book.body %></td>

<% if @user == current_user %>
<td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %></td>
<td><%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-sm btn-danger',  data:{ confirm: '本当に消しますか？' } %></td>
  <% end %>
  </tbody>
</table>

</div>
</div>
</div>